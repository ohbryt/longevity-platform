# Longevity Platform Environment Variables

# Database Configuration
DATABASE_URL="postgresql://username:password@localhost:5432/longevity_platform"

# API Keys
OPENAI_API_KEY="your-openai-api-key-here"
ANTHROPIC_API_KEY="your-anthropic-api-key-here"

# Stripe Configuration
STRIPE_SECRET_KEY="sk_test_your-stripe-secret-key"
STRIPE_PUBLISHABLE_KEY="pk_test_your-stripe-publishable-key"
STRIPE_PREMIUM_PRICE_ID="price_premium_tier_id"
STRIPE_VIP_PRICE_ID="price_vip_tier_id"

# Google Sheets Integration
GOOGLE_SHEET_ID="your-google-sheet-id"
GOOGLE_SERVICE_ACCOUNT_EMAIL="your-service-account@project.iam.gserviceaccount.com"
GOOGLE_PRIVATE_KEY="-----BEGIN PRIVATE KEY-----\nYour private key here\n-----END PRIVATE KEY-----\n"

# Email Configuration
SENDGRID_API_KEY="your-sendgrid-api-key"
EMAIL_FROM="noreply@longevity-platform.com"

# Frontend Configuration
NEXT_PUBLIC_APP_URL="https://your-platform.com"
NEXT_PUBLIC_STRIPE_PUBLISHABLE_KEY="pk_test_your-stripe-publishable-key"

# AI Content Settings
AI_MODEL_PRIMARY="gpt-4"
AI_MODEL_CREATIVE="claude-3-sonnet"
AI_TEMPERATURE=0.7
AI_MAX_TOKENS=2000

# Automation Settings
AUTOMATION_ENABLED=true
CURATION_SCHEDULE="0 6 * * *"
NEWSLETTER_SCHEDULE="0 7 * * 1"

# Analytics
GOOGLE_ANALYTICS_ID="GA_MEASUREMENT_ID"
MIXPANEL_TOKEN="your-mixpanel-token"

# Development/Production
NODE_ENV="development"
PORT=3001
FRONTEND_PORT=3000

# Security
JWT_SECRET="your-jwt-secret-key-here"
CORS_ORIGIN="http://localhost:3000"

# Content Limits
FREE_ARTICLES_PER_WEEK=3
PREMIUM_ARTICLES_PER_WEEK=7
VIP_CUSTOM_REQUESTS_PER_MONTH=10

# Feature Flags
ENABLE_VOD=true
ENABLE_COMMUNITY=true
ENABLE_AI_CONTENT=true
ENABLE_AUTOMATION=true