{
  "name": "longevity-platform",
  "version": "1.0.0",
  "description": "Knowledge Subscription & AI Content Platform for Longevity Science",
  "main": "index.js",
  "scripts": {
    "dev": "concurrently \"npm run dev:backend\" \"npm run dev:frontend\"",
    "dev:backend": "cd backend && npm run dev",
    "dev:frontend": "cd frontend && npm run dev",
    "build": "npm run build:frontend && npm run build:backend",
    "build:frontend": "cd frontend && npm run build",
    "build:backend": "cd backend && npm run build",
    "start": "cd backend && npm start",
    "test": "npm run test:backend && npm run test:frontend",
    "test:backend": "cd backend && npm test",
    "test:frontend": "cd frontend && npm test",
    "ai-content": "cd ai-content && python main.py",
    "automation": "cd automation && python automation.py"
  },
  "workspaces": [
    "backend",
    "frontend",
    "ai-content",
    "automation"
  ],
  "devDependencies": {
    "concurrently": "^8.2.2"
  },
  "dependencies": {
    "@pinecone-database/pinecone": "^7.0.0",
    "cors": "^2.8.6",
    "dotenv": "^17.2.3",
    "express": "^5.2.1",
    "openai": "^6.17.0"
  }
}
